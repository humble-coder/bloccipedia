<!DOCTYPE html>
<html>
  <head>
    <title>Bloccipedia</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% elsif flash[:error] %>
      <%= flash[:error] %>
    <% elsif flash[:alert] %>
      <%= flash[:alert] %>
    <% end %>

  <%= yield %>

  </body>
</html>
