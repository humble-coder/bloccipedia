<h1>New Wiki</h1>

<% if current_user %>
  <%= form_for @wiki do |f| %>

    <% if @wiki.errors.any? %>
      <ul>
      <% @wiki.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    <% end %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <% if current_user.premium %>
      <%= f.label 'Make Public' %>
      <%= f.check_box :public, { checked: true }, 1, 0 %>
    <% end %>
    <%= f.submit 'Make Wiki' %>
  <% end %>
<% else %>
  <p>You must be signed in to make a wiki.</p>
<% end %>